{
  "stores": [
    {
      "name": "AC_FAST_SLOW_STORE",
      "fast_slow": {
        "fast": {
          "size_partitioning": {
            "size": 1000,
            "lower_store": {
              "memory": {
                "eviction_policy": {
                  "max_bytes": 100000000,
                  "max_count": 150000
                }
              }
            },
            "upper_store": {
              "noop": {}
            }
          }
        },
        "slow": {
          "redis_store": {
            "addresses": [
              "${REDIS_STORE_URL:-redis://redis.storage.svc.cluster.local:6379}"
            ]
          }
        }
      }
    },
    {
      "name": "AC_STORE",
      "completeness_checking": {
        "backend": {
          "ref_store": {
            "name": "AC_FAST_SLOW_STORE"
          }
        },
        "cas_store": {
          "ref_store": {
            "name": "cas_STORE"
          }
        }
      }
    },
    {
      "name": "cas_FAST_SLOW_STORE",
      "verify": {
        "backend": {
          "fast_slow": {
            "fast": {
              "size_partitioning": {
                "size": 64000,
                "upper_store": {
                  "noop": {}
                },
                "lower_store": {
                  "memory": {
                    "eviction_policy": {
                      "max_bytes": 1000000000,
                      "max_count": 100000
                    }
                  }
                }
              }
            },
            "slow": {
              "size_partitioning": {
                "size": 1500000,
                "lower_store": {
                  "redis_store": {
                    "addresses": [
                      "${SHARED_REDIS_URL:-redis://redis.storage.svc.cluster.local:6379}"
                    ]
                  }
                },
                "upper_store": {
                  "shard": {
                    "stores": [
                      {
                        "store": {
                          "filesystem": {
                            "content_path": "/nfs/content_path-ac",
                            "temp_path": "/nfs/tmp_path-ac",
                            "eviction_policy": {
                              // 10gb.
                              "max_bytes": 1000000000,
                            }
                          }
                        }
                      }
                    ]
                  }
                }
              }
            }
          }
        },
        "verify_size": true,
        "hash_verification_function": "sha256"
      }
    },
    {
      "name": "cas_STORE",
      "existence_cache": {
        "backend": {
          "ref_store": {
            "name": "cas_FAST_SLOW_STORE"
          }
        },
        "eviction_policy": {
          "max_count": 10000000,
          "max_seconds": 1800
        }
      }
    },
    {
      "name": "BEP_STORE",
      "redis_store": {
        "addresses": [
          "${BEP_REDIS_STORE_URL:-redis://redis.storage.svc.cluser.local:6379/2}"
        ]
      }
    }
  ]
}
