    "config:recommended",
    "docker:enableMajor",
    ":automergeBranch",
    ":disableRateLimiting",
    ":dependencyDashboard",
    ":semanticCommits",
    ":timezone(Australia/Sydney)",
    "github>solanyn/home-ops//.renovate/autoMerge.json5",
